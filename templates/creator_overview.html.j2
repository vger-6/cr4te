<!DOCTYPE html>
<html lang="en">
<head>
  <style>body { display: none; }</style>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{ html_settings.creator_overview_page_title }}</title>
  <link rel="stylesheet" href="assets/css/base.css">
  <link rel="stylesheet" href="assets/css/creator.css">
</head>
<body>

<div class="top-link">
  <span class="nav-current">{{ html_settings.nav_creators_label }}</span> &middot;
  <a href="projects.html">{{ html_settings.nav_projects_label }}</a> &middot;
  <a href="tags.html">{{ html_settings.nav_tags_label }}</a>
  {% include "partials/_theme_dropdown.html.j2" %}
</div>

<h1>{{ html_settings.creator_overview_page_title }}</h1>

{% set placeholder = html_settings.creator_overview_page_search_placeholder %}
{% include "partials/_search_bar.html.j2" %}

<div class="section-box">
  <div class="section-content">
    <div class="image-gallery" id="imageGallery" data-image-max-height="{{ creator_thumb_max_height }}">
    {% for creator in creator_entries %}
      <div class="image-wrapper" data-search="{{ creator.search_text }}">
        <a href="{{ creator.url }}" title="{{ creator.name }}">
          <img src="{{ creator.thumbnail_url }}" alt="{{ creator.name }} thumbnail">
          <span>{{ creator.name }}</span>
        </a>
      </div>
    {% endfor %}
    </div>
  </div>
</div>

<script src="assets/js/filter_creators.js"></script>
<script src="assets/js/gallery_builder.js" defer></script>
<script src="assets/js/theme_selector.js" defer></script>

</body>
</html>

