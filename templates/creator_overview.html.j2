<!DOCTYPE html>
<html lang="en">
<head>
  <style>body { display: none; }</style>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{ html_settings.creator_overview_page_title }}</title>
  <link rel="stylesheet" href="assets/css/base.css">
  <link rel="stylesheet" href="assets/css/theme.css">
</head>
<body>

<div class="top-link">
  <span class="nav-current">{{ html_settings.nav_creators_label }}</span> &middot;
  <a href="projects.html">{{ html_settings.nav_projects_label }}</a> &middot;
  <a href="tags.html">{{ html_settings.nav_tags_label }}</a>
  {% include "partials/_theme_dropdown.html.j2" %}
</div>

<h1>{{ html_settings.creator_overview_page_title }}</h1>

{% set placeholder = html_settings.creator_overview_page_search_placeholder %}
{% include "partials/_search_bar.html.j2" %}

<div class="section-box">
  <div class="section-content">
    <div class="image-gallery {% if html_settings.creator_overview_page_image_gallery_building_strategy == 'aspect' %} image-gallery--aspect {% endif %}"
         id="imageGallery"
         data-image-max-height="{{ gallery_image_max_height }}"
         data-page-size="{{ html_settings.creator_overview_page_image_page_size }}"
         data-aspect-ratio="{{ html_settings.creator_overview_page_image_gallery_aspect_ratio or '1/1' }}">
      {% for creator in creator_entries %}
        <div class="image-wrapper" 
             data-search-text="{{ creator.search_text }}"
             data-az-string="{{ creator.name }}">
          <a href="{{ creator.url }}" title="{{ creator.name }}">
            {% if html_settings.creator_overview_page_image_gallery_building_strategy == 'aspect' %}
              <div class="aspect-ratio-box" style="aspect-ratio: {{ html_settings.creator_overview_page_image_gallery_aspect_ratio or '1/1' }};">
                <img src="{{ creator.thumbnail_url }}" alt="Poster for {{ creator.name }}">
              </div>
            {% else %}
              <img src="{{ creator.thumbnail_url }}" alt="Poster for {{ creator.name }}">
            {% endif %}
            <span>{{ creator.name }}</span><br>
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<script src="assets/js/filter_base.js"></script>
<script src="assets/js/filter_simple.js"></script>
{% if html_settings.creator_overview_page_image_gallery_building_strategy == "aspect" %}
  <script src="assets/js/aspect_gallery_builder.js" defer></script>
{% else %}
  <script src="assets/js/gallery_builder.js" defer></script>
{% endif %}
<script src="assets/js/pagination.js" defer></script>
<script src="assets/js/theme_selector.js" defer></script>

</body>
</html>

