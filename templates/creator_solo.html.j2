<!DOCTYPE html>
<html lang="en">
<head>
  <style>body { display: none; }</style>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{ creator.name }}</title>
  <link rel="stylesheet" href="../css/base.css">
  <link rel="stylesheet" href="../css/creator.css">
</head>
<body>

<div class="top-link">
  <a href="../index.html">{{ html_settings.nav_creators_label }}</a> &middot;
  <a href="../projects.html">{{ html_settings.nav_projects_label }}</a> &middot;
  <a href="../tags.html">{{ html_settings.nav_tags_label }}</a>
  <div style="float: right;">
    <div class="theme-dropdown">
      <button class="theme-button" id="theme-toggle">Themes â–¾</button>
      <div class="theme-panel" id="theme-panel">
        <div class="theme-option" data-theme="theme-frozen-aurora">Frozen Aurora</div>
        <div class="theme-option" data-theme="theme-forest-night">Forest Night</div>
        <div class="theme-option" data-theme="theme-midnight-monochrome">Midnight Mono</div>
        <div class="theme-option" data-theme="theme-warm-linen">Warm Linen</div>
        <div class="theme-option" data-theme="theme-sunset-neon">Sunset Neon</div>
      </div>
    </div>
  </div>
</div>

<h1>{{ creator.name }}</h1>

<div class="creator-layout">

  <div class="creator-left">

    <div class="section-box">
      <div class="section-title">{{ html_settings.creator_page_profile_title }}</div>
      <hr>
      <div class="section-content markdown">
        <div class="creator-info">
          <img src="{{ portrait_url }}" alt="Portrait of {{ creator.name }}">
          <div>
            <p><strong>Name:</strong> {{ creator.name }}</p>
            {% if creator.date_of_birth %}
            <p><strong>Date of Birth:</strong> {{ creator.date_of_birth }}</p>
            {% endif %}
            {% if debut_age %}
            <p><strong>Debut Age:</strong> {{ debut_age }}</p>
            {% endif %}
          </div>
        </div>
      </div>
    </div>

    {% if info_html %}
    <div class="section-box">
      <div class="section-title">{{ html_settings.creator_page_about_title }}</div>
      <hr>
      <div class="section-content text-content">
        {{ info_html | safe }}
      </div>
    </div>
    {% endif %}

    {% if tag_map %}
    <div class="section-box">
      <div class="section-title">{{ html_settings.creator_page_tags_title }}</div>
      <hr>
      <div class="section-content tag-list">
        {% for category, tags in tag_map.items() %}
        <div class="tag-category">
          <strong>{{ category }}:</strong>
          {% for tag in tags %}
            <a class="tag" href="../index.html?tag={{ tag }}">{{ tag }}</a>
          {% endfor %}
        </div>
        {% endfor %}
      </div>
    </div>
    {% endif %}

  </div>

  <div class="creator-right">

    {% if projects %}
    <div class="section-box">
      <div class="section-title">{{ html_settings.creator_page_projects_title }}</div>
      <hr>
      <div class="section-content project-gallery">
        {% for project in projects %}
        <div class="project-entry">
          <a href="{{ project.url }}" title="{{ project.title }}">
            <img src="{{ project.thumbnail_url }}" alt="Thumbnail for {{ project.title }}"><br>
            {{ project.title }}
          </a>
        </div>
        {% endfor %}
      </div>
    </div>
    {% endif %}

    {% for collab in collaborations %}
    <div class="section-box">
      <div class="section-title">{{ html_settings.creator_page_projects_title }} with {{ collab.label }}</div>
      <hr>
      <div class="section-content project-gallery">
        {% for project in collab.projects %}
        <div class="project-entry">
          <a href="{{ project.url }}" title="{{ project.title }}">
            <img src="{{ project.thumbnail_url }}" alt="Thumbnail for {{ project.title }}"><br>
            {{ project.title }}
          </a>
        </div>
        {% endfor %}
      </div>
    </div>
    {% endfor %}

  </div>

</div>

<script src="../js/theme.js" defer></script>

</body>
</html>

