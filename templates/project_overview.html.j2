<!DOCTYPE html>
<html lang="en">
<head>
  <style>body { display: none; }</style>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{ html_settings.project_overview_page_title }}</title>
  <link rel="stylesheet" href="assets/css/base.css">
  <link rel="stylesheet" href="assets/css/creator.css">
</head>
<body>

<div class="top-link">
  <a href="index.html">{{ html_settings.nav_creators_label }}</a> &middot;
  <span class="nav-current">{{ html_settings.nav_projects_label }}</span> &middot;
  <a href="tags.html">{{ html_settings.nav_tags_label }}</a>
  {% include "_theme_dropdown.html.j2" %}
</div>

<h1>{{ html_settings.project_overview_page_title }}</h1>

<div class="search-bar-wrapper">
  <input type="text" id="search-input" placeholder="{{ html_settings.project_overview_page_search_placeholder }}" class="search-box">
</div>

<div class="az-tabs">
  {% for letter in 'ABCDEFGHIJKLMNOPQRSTUVWXYZ' %}
    <span class="az-tab" data-letter="{{ letter }}">{{ letter }}</span>
  {% endfor %}
</div>

<div class="section-box">
  <div class="section-content">
    <div class="image-gallery" id="imageGallery" data-image-max-height="{{ poster_max_height }}">
    {% for project in projects %}
      <div class="image-wrapper" data-title="{{ project.title }}" data-text="{{ project.search_text | default('') }}">
        <a href="{{ project.url }}" title="{{ project.title }}">
          <img src="{{ project.thumbnail_url }}" alt="Poster for {{ project.title }}">
          <span>{{ project.title }}</span><br>
          <span><small>{{ project.creator_name }}</small></span>
        </a>
      </div>
    {% endfor %}
    </div>
  </div>
</div>

<script src="assets/js/filter_projects.js"></script>
<script src="assets/js/gallery_builder.js" defer></script>
<script src="assets/js/theme_selector.js" defer></script>

</body>
</html>

